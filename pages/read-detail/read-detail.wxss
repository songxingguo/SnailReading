/* pages/read-detail/read-detail.wxss */
.read-detail {
  padding: 0 35rpx;
}
.read-detail .title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 64rpx;
  margin-top: 42rpx;
}
.read-detail .header {
  display: flex;
  justify-content: space-between;
  justify-items: center;
  margin: 35rpx 0;
}
.read-detail .header image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  vertical-align: middle;
  margin-right: 25rpx;
}
.read-detail .name {
  font-size: 26rpx;
  color: #474747;
}
.read-detail .follow {
  width: 110rpx;
  height: 56rpx;
  text-align: center;
  line-height: 56rpx;
  border-radius: 28rpx;
  font-size: 26rpx;
  color: #444444;
  border: 2rpx solid #ececec;
}
.read-detail .content {
  font-size: 30rpx;
  color: #444444;
  text-align: justify;
  line-height: 44rpx;
  padding-bottom: 110rpx;
}
.read-detail .content text {
    display: inline-block;
    margin-top: 35rpx;
}
.read-detail .content image {
  width: 100%;
  height: 300rpx;
}
.read-detail .footer {
  width: 100%;
  height: 100rpx;
  font-size: 25rpx;
  color: #545454;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
  position: fixed;
  bottom: 0;
  left: 0;
  box-shadow: 0 0 10rpx 1rpx rgba(0, 0, 0, 0.5);
  align-items: center;
}
.read-detail .followed {
  background-color: #49BE38;
  color: #fff;
}
.read-detail .icon-collected {
  color: #CE5959;
}