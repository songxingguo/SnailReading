/* pages/index/index.wxss */
page {
  background-color: #f6f6f6;
}
.read-cont {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  padding: 0 32rpx;
  background-color: #FFF;
}
.read-cont .header {
  display: flex;
  align-items: center;
  margin: 30rpx 0;
}
.read-cont .header image {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.read-cont .header text {
  font-size: 27rpx;
  color: #474747;
  margin-left: 25rpx;
}
.read-cont .body {
  display: flex;
  flex-direction: column;
}
.read-cont .body image {
  width: 100%;
  height: 300rpx;
}
.read-cont .title {
  font-size: 43rpx;
  color: #444444;
  font-weight: bold;
  margin: 30rpx 0;
  line-height: 52rpx;
  text-align: justify;
}
.read-cont .title .hot {
  display: inline-block;
  width: 75rpx;
  height: 45rpx;
  border-radius: 22.5rpx;
  background-color: #bc7878;
  color: #FFF;
  font-size: 26rpx;
  text-align: center;
  line-height: 45rpx;
  float: left;
  margin: 4rpx 12rpx 0 0;
}
.read-cont .content {
  font-size: 30rpx;
  color: #7f7f7f;
  line-height: 44rpx;
  text-align: justify;
}
.read-cont .footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 30rpx 0 35rpx 0;
}
.read-cont .clickNum { 
   font-size: 27rpx;
   color: #c0c0c0;
}
.read-cont .great {
   font-size: 20rpx;
   color: #c0c0c0;
}
.read-cont .great icon{
   margin-left: 10px;
}
.icon-dianzan {
  font-size: 29rpx;
}